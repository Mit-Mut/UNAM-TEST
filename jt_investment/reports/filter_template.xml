<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="search_template_fund_method">
        <a type="button" class="dropdown-toggle" data-toggle="dropdown">
            <span class="fa fa-book"/>
            Funds:
            <t t-set="selected_funds" t-value="options.get('name_journal_group') or ', '.join(c.get('fund_id') for c in options['fund_id'] if c.get('selected'))"/>
            <t t-if="selected_funds">
                <t t-esc="selected_funds"/>
            </t>
            <t t-else="">
                <span>All</span>         
            </t>
        </a>
         
        <div class="dropdown-menu o_filters_menu" role="menu">
            <t t-foreach="options['fund_id']" t-as="j">
                <t t-if="j.get('id') == 'divider'">
                    <div role="separator" class="dropdown-divider"/>
                    <b role="menuitem" class="ml4 dropdown-item-text"><t t-esc="j.get('fund_id')"/></b>
                    <div role="separator" class="dropdown-divider"/>
                </t>
                <t t-if="j.get('id') != 'divider'">
                    <t>
                        <a role="menuitem" class="dropdown-item js_account_report_choice_filter" t-att-title="j.get('fund_id')" t-att-data-id="j.get('id')" data-filter="fund_id">
                            <t t-esc="j.get('fund_id')"/>
                        </a>
                    </t>
                </t>
            </t>
        </div>
        
    </template>

    <template id="search_template_jt_investment" inherit_id="account_reports.search_template">
        <xpath expr="." position="inside">
            <div class="btn-group o_dropdown o_account_reports_filter_currency" t-if="options.get('fund_id') != None">
                <t t-call="jt_investment.search_template_fund_method"/>
            </div>
        </xpath>
    </template>

</odoo>