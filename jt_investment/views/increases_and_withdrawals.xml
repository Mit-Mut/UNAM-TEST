<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
         <record model="ir.ui.view" id="view_req_open_balance_form_investment_inherit">
            <field name="name">request.open.balance.invest.form</field>
            <field name="model">request.open.balance.invest</field>
            <field name="inherit_id" ref="jt_agreement.view_req_open_balance_form_investment"/>
            <field name="arch" type="xml">
            	<field name="state" position="before">
            		 <button name="set_to_requested" type="object" string="Requested" class="oe_highlight"
                             attrs="{'invisible': [('state', '!=', 'draft')]}" />
            	</field>
            	<field name="type_of_operation" position="after">
            		<field name="type_of_investment" invisible="not context.get('from_fund_view',False)" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
            	</field>
            	<field name="origin_resource_id" position="after">
            		<field name="fund_id" invisible="context.get('from_fund_view',False)" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
            		<field name="fund_type_id" invisible="context.get('from_fund_view',False)" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
            		<field name="type_of_agreement_id" invisible="context.get('from_fund_view',False)" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
            		<field name="bases_collaboration_id" invisible="context.get('from_fund_view',False)" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
            	</field>
			</field>
		</record>
		
		<!--  Fund Menus -->
		
        <record id="action_req_open_balance_investment_with_new_fund" model="ir.actions.act_window">
            <field name="name">Funds</field>
            <field name="res_model">request.open.balance.invest</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_state':'draft','from_fund_view':True}</field>
        </record>
               
        <menuitem id="menu_increments_withdrawals_inv_fund" name="Funds"
                  parent="submenu_menu_investment_money"
                 action="action_req_open_balance_investment_with_new_fund" sequence="0"/>
		
	</data>
</odoo>	