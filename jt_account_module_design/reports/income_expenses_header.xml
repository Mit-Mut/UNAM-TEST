<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- STATE OF INCOME, EXPENSES AND COMPARATIVE INVESTMENTS-->
        <template id="external_layout_income_expenses" name="external_layout_income_expenses">
            <t t-if="not o" t-set="o" t-value="doc"/>

            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>

            <div class="header">
                <div class="row">
                    <div class="col-3">
                        <img t-attf-src="data:image/png;base64,{{company.header_logo}}"
                             style="width:120px;height:100px;margin-top:20px;margin-right:20px;margin-bottom:20px;"/>
                    </div>
                    
                    <div class="col-6 text-center">
                        <b>
                            <span style="font-size:14px;">NATIONAL AUTONOMOUS UNIVERSITY OF MEXICO GENERAL DIRECTORATE OF BUDGET CONTROL-GENERAL ACCOUNTING
                            </span>
                        </b>
                        <br/>
                        <span style="font-size:14px;">STATE OF INCOME, EXPENSES AND COMPARATIVE INVESTMENTS FROM 
                            <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%B')"/>  TO
                            <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%B')"/> OF
                            <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y')"/> AND
                            <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y')-1"/> 
                        </span> <br/>
                        <span>
                            (THOUSANDS OF PESOS)
                        </span>                        
                    </div>
                </div>
            </div>
            <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
                 t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-raw="0"/>
            </div>
        </template>         
    </data>
</odoo>