<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="adjusted_payroll_wizard_view1" model="ir.ui.view">
            <field name="name">adjusted.payroll.wizard.view</field>
            <field name="model">adjusted.payroll.wizard</field>
            <field name="arch" type="xml">
            	<form>
            		<group>
            			<group>
            				<field name="type_of_movement" required="1"/>
            				<field name="filename" invisible="1"/>
            				<field name="file" filename="filename" required="1"/>
            				<field name="payroll_process_id" invisible="1"/>
            			</group>
            		</group>
           			<group>
           				<field name="employee_ids" invisible="1">
            					<tree>
            						<field name="name"/>
            						<field name="rfc"/>
            						<field name="payment_place_id"/>
            						<field name="job_id"/>
            						<field name="company_id"/>
            					</tree>
            					<form>
            						<group>
	            						<field name="name"/>
	            						<field name="rfc"/>
	            						<field name="payment_place_id"/>
	            						<field name="job_id"/>
	            						<field name="company_id"/>
            						</group>
            					</form>
           					
           				</field>
           			</group>
                    <footer>
                        <button string="Generate" name="generate" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
            		
            	</form>
			</field>
		</record>
	</data>
</odoo>