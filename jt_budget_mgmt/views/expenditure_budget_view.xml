<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- search view for expenditure budget model -->
        <record id="expenditure_budget_search_view" model="ir.ui.view">
            <field name="name">expenditure.budget.search.view</field>
            <field name="model">expenditure.budget</field>
            <field name="arch" type="xml">
                <search string="Expenditure Budget">
                    <field name="budget_name"/>
                    <field name="state"/>
                    <group expand="1" string="Group By">
                        <filter string="Budget name" name='budget_name' context="{'group_by':'budget_name'}"/>
                        <filter string="Status" name='status_groupby' context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- form view for expenditure budget model -->
        <record id="expenditure_budget_form_view" model="ir.ui.view">
            <field name="name">expenditure.budget.form.view</field>
            <field name="model">expenditure.budget</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="validate_and_add_budget_line" type="object" string="Validate Lines" class="oe_highlight" attrs="{'invisible': [('import_status', '!=', 'in_progress')]}"/>
                        <button name="validate_and_add_budget_line" type="object" string="Re-scan Failed Rows" class="oe_highlight" attrs="{'invisible': [('failed_rows', '=', 0), ('allow_upload', '=', False)]}" context="{'re_scan_failed':True}"/>

                        <button name="previous_budget" type="object" string="Previous budget" class="oe_highlight" attrs="{'invisible': ['|', '|', ('failed_rows', '>', 0), ('state', '!=', 'draft')]}"/>
                        <button name="confirm" type="object" string="Confirm" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'previous')]}"/>
                        <button name="approve" type="object" string="Approve" class="oe_highlight" states='confirm'/>
                        <button name="reject" type="object" string="Reject" class="oe_highlight" states='confirm'/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,previous,confirm,validate,done"/>
                    </header>
                    <sheet>
                        <div>
                            <span class="o_form_label">Budget name</span>
                            <h1>
                                <field name="budget_name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="responsible_id" required="1"/>
                                <button name="import_lines" type="object" string="Import lines" class="oe_highlight" attrs="{'invisible': ['|', ('import_status', '!=', 'draft'), ('state', '!=', 'draft')]}"/>
                                <field name="total_budget" required="1"/>
                                <field name="record_number"/>
                                <field name="import_record_number"/>
                            </group>        
                            <group>
                                <label for="from_date"/>
                                <div>
                                    <field name="from_date" class="oe_inline" required="1"/> - 
                                    <field name="to_date" class="oe_inline" required="1"/>
                                </div>
                            </group>
                        </group>
                        <notebook>
                            <page string="Expenditure Budget Lines">
                                <field name="line_ids">
                                    <tree>
                                        <field name="imported" invisible="1"/>
                                        <field name="program_code_id"/>
                                        <field name="dependency_id"/>
                                        <field name="sub_dependency_id"/>
                                        <field name="program_id"/>
                                        <field name="item_id"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="authorized" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Total Authorized Amount"/>
                                        <field name="assigned" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Total Assigned Amount"/>
                                        <field name="available" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Total Available Amount"/>
                                        <field name="currency_id" invisible="1"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="imported" invisible="1"/>
                                            <field name="program_code_id" required="1" attrs="{'readonly': [('imported', '=', True)]}"/>
                                            <field name="dependency_id" invisible="1"/>
                                            <field name="sub_dependency_id" invisible="1"/>
                                            <field name="program_id" invisible="1"/>
                                            <field name="item_id" invisible="1"/>
                                            <field name="start_date" required="1" attrs="{'readonly': [('imported', '=', True)]}"/>
                                            <field name="end_date" required="1" attrs="{'readonly': [('imported', '=', True)]}"/>
                                            <field name="authorized" widget="monetary" options="{'currency_field': 'currency_id'}" required="1" attrs="{'readonly': [('imported', '=', True)]}"/>
                                            <field name="assigned" widget="monetary" options="{'currency_field': 'currency_id'}" required="1" attrs="{'readonly': [('imported', '=', True)]}"/>
                                            <field name="available" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                                            <field name="expenditure_budget_id" invisible="1"/>
                                            <field name="currency_id" invisible="1"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string='Import Status' attrs="{'invisible': [('allow_upload', '=', False), ('budget_file', '=', False)]}">
                                <group>
                                    <field name="allow_upload" invisible="1"/>
                                    <field name="budget_file" filename="filename" attrs="{'readonly': [('allow_upload', '!=', True)]}"/>
                                    <field name="filename" invisible="1"/>
                                    <field name="fialed_row_filename" invisible="1"/>
                                    <field name="import_status" readonly="1"/>
                                    <field name="failed_row_file" attrs="{'invisible': [('failed_rows', '=', 0)]}" readonly="1" string="Failed Rows Tracker" filename="fialed_row_filename"/>
                                    <field name="total_rows" string="Total Rows" readonly="1"/>
                                    <field name="failed_rows" string="Total Failed Rows" readonly="1"/>
                                    <field name="success_rows" string="Total Success Rows" readonly="1"/>
                                    <field name="pointer_row" string="Next Row To Start" readonly="1" attrs="{'invisible': [('import_status', '=', 'done')]}"/>
                                </group>
                            </page>
                            <page string='Failed/Success Rows' attrs="{'invisible': [ ('allow_upload', '=', False),('budget_file', '=', False)]}">
                                <group string="Failed Rows" >
                                    <field name="failed_row_ids" readonly="1" nolabel="1"/>
                                </group>
                                <group string="Success Rows">
                                    <field name="success_row_ids" readonly="1" nolabel="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- tree view for expenditure budget model -->
        <record id="expenditure_budget_tree_view" model="ir.ui.view">
            <field name="name">expenditure.budget.tree.view</field>
            <field name="model">expenditure.budget</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="budget_name"/>
                    <field name="responsible_id" readonly="1"/>
                    <field name="total_budget"/>
                    <field name="record_number"/>
                    <field name="import_record_number"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="import_record_number" invisible="1"/>
                    <field name="allow_upload" invisible="1"/>
                    <field name="budget_file" invisible="1"/>
                    <field name="filename" invisible="1"/>
                    <field name="import_status" invisible="1"/>
                    <field name="failed_row_file" invisible="1"/>
                    <field name="fialed_row_filename" invisible="1"/>
                    <field name="failed_rows" invisible="1"/>
                    <field name="success_rows" invisible="1"/>
                    <field name="success_row_ids" invisible="1"/>
                    <field name="failed_row_ids" invisible="1"/>
                    <field name="pointer_row" invisible="1"/>
                    <field name="total_rows" invisible="1"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- action for expenditure budget views -->
        <record id="action_expenditure_budget" model="ir.actions.act_window">
            <field name="name">Expenditure budget</field>
            <field name="res_model">expenditure.budget</field>
            <field name="view_mode">tree,form,search</field>
            <field name="view_id" ref="expenditure_budget_tree_view"/>
            <field name="context">{}</field>
        </record>
    </data>
</odoo>