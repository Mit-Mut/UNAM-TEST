                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>

            <div class="header">
                <div class="row">
                    <div class="col-3">
                        <img t-attf-src="data:image/png;base64,{{company.header_logo}}"
