<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

      <record id="reschedule_request_form_view" model="ir.ui.view">
            <field name="name">reschedule.request.form.view</field>
            <field name="model">reschedule.request</field>
            <field name="arch" type="xml">
                <form string="Reschedule Request">
                    <group >
                    	<field name="payment_bank_id" required="1"/>
                    	<field name="payment_bank_account_id" required="1"/>
                    	<field name="l10n_mx_edi_payment_method_id" required="1"/>
                    </group>
                    <footer>
                        <button string="Reschedule" name="reshedule_request" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
	</data>
</odoo>