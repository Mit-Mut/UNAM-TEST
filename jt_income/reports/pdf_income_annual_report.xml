<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="pdf_external_layout_income_annual_report" name="pdf_income_annual_report_layout">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <div class="header">
            <div class="row">
                <div class="col-12 text-center">
                   	<div style="font-size:14px;">DIRECCIÓN GENERAL DE FINANZAS</div><br/>
                   	<div style="font-size:12px;">DIRECCIÓN DE INGRESOS Y OPERACIÓN FINANCIERA</div><br/>
                   	<div style="font-size:10px;">DEPARTAMENTO DE INGRESOS</div><br/>
                   	<div style="font-size:10px;">INFORME ANUAL INGRESOS</div><br/>
                   	<div style="font-size:10px;">INGRESOS POR SERVICIOS DE EDUCACIÓN Y PATRIMONIALES</div><br/>
                   	<div style="font-size:10px;">REAL</div><br/>
                </div>
            </div>
        </div>
        <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
          <t t-raw="0"/>
        </div>
         
        </template>

