<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- search view for calendar assigned amounts model -->
        <record id="calendar_assigned_amounts_search_view" model="ir.ui.view">
            <field name="name">calendar.assigned.amounts.search.view</field>
            <field name="model">calendar.assigned.amounts</field>
            <field name="arch" type="xml">
                <search string="Calendar of assigned amounts">
                    <field name="date"/>
                    <group expand="1" string="Group By">
                        <filter string="Budget" name='budget' context="{'group_by':'budget_id'}"/>
                        <filter string="Made By" name='user' context="{'group_by':'user_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- form view for calendar assigned amounts model -->
        <record id="calendar_assigned_amounts_form_view" model="ir.ui.view">
            <field name="name">calendar.assigned.amounts.form.view</field>
            <field name="model">calendar.assigned.amounts</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="date" required="1"/>
                                <field name="month_int" invisible="1"/>
                                <field name="amount_to_receive"/>
                                <field name="amount_received"/>
                                <field name="amount_pending"/>
                                <field name="obs_calender_amount"/>
                                <field name="journal_id"/>

                                <!-- Fields for Control of Assigned Amount -->
                                <field name="folio" invisible="1"/>
                                <field name="budget_id" invisible="1"/>
                                <field name="import_date" invisible="1"/>
                                <field name="user_id" invisible="1"/>
                                <field name="obs_cont_amount" invisible="1"/>
                                <field name="file" invisible="1"/>
                                <field name="filename" invisible="1"/>
                            </group>        
                        </group>
                        <notebook>
                            <page string="Calendar of assigned amounts lines">
                                <field name="line_ids">
                                    <tree>
                                       <field name="date" invisible="1"/>
                                       <field name="shcp_id" invisible="1"/>
                                       <field name="month" invisible="1"/>
                                       <field name="amount_assigned" invisible="1"/>
                                       <field name="amount_deposited" invisible="1"/>
                                       <field name="amount_pending" invisible="1"/>
                                       <field name="year"/>
                                       <field name="branch"/>
                                       <field name="unit"/>
                                       <field name="purpose"/>
                                       <field name="function"/>
                                       <field name="sub_function"/>
                                       <field name="program"/>
                                       <field name="institution_activity"/>
                                       <field name="project_identification"/>
                                       <field name="project"/>
                                       <field name="budgetary_program"/>
                                       <field name="item_id"/>
                                       <field name="expense_type"/>
                                       <field name="funding_source"/>
                                       <field name="federal"/>
                                       <field name="key_wallet"/>
                                       <field name="january" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                       <field name="february" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                       <field name="march" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                       <field name="april" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                       <field name="may" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                       <field name="june" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                       <field name="july" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                       <field name="august" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                       <field name="september" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                       <field name="october" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                       <field name="november" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                       <field name="december" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                       <field name="annual_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                       <field name="annual_amount_received" readonly="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                       <field name="bank_id"/>
                                       <field name="bank_account_id"/>
                                       <field name="observations"/>
                                       <field name="calendar_assigned_amount_id" invisible="1"/>
                                    </tree>
                                    <form>
                                    	<group>
	                                    	<group>
			                                       <field name="year"/>
			                                       <field name="branch"/>
			                                       <field name="unit"/>
			                                       <field name="purpose"/>
			                                       <field name="function"/>
			                                       <field name="sub_function"/>
			                                       <field name="program"/>
			                                       <field name="institution_activity"/>
			                                       <field name="project_identification"/>
			                                       <field name="project"/>
			                                       <field name="budgetary_program"/>
			                                       <field name="item_id"/>
			                                       <field name="expense_type"/>
			                                       <field name="funding_source"/>
			                                       <field name="federal"/>
			                                       <field name="key_wallet"/>
	                                    	</group>
	                                        <group>
	                                        	<field name="currency_id" invisible="1"/>
	                                            <field name="date" invisible="1"/>
	                                            <field name="shcp_id" invisible="1"/>
	                                            <field name="month" invisible="1"/>
	                                            <field name="amount_assigned" invisible="1"/>
	                                            <field name="amount_deposited" invisible="1"/>
	                                            <field name="amount_pending" invisible="1"/>
		                                      	<field name="january" widget="monetary" options="{'currency_field': 'currency_id'}"/>
		                                       <field name="february" widget="monetary" options="{'currency_field': 'currency_id'}"/>
		                                       <field name="march" widget="monetary" options="{'currency_field': 'currency_id'}"/>
		                                       <field name="april" widget="monetary" options="{'currency_field': 'currency_id'}"/>
		                                       <field name="may" widget="monetary" options="{'currency_field': 'currency_id'}"/>
		                                       <field name="june" widget="monetary" options="{'currency_field': 'currency_id'}"/>
		                                       <field name="july" widget="monetary" options="{'currency_field': 'currency_id'}"/>
		                                       <field name="august" widget="monetary" options="{'currency_field': 'currency_id'}"/>
		                                       <field name="september" widget="monetary" options="{'currency_field': 'currency_id'}"/>
		                                       <field name="october" widget="monetary" options="{'currency_field': 'currency_id'}"/>
		                                       <field name="november" widget="monetary" options="{'currency_field': 'currency_id'}"/>
		                                       <field name="december" widget="monetary" options="{'currency_field': 'currency_id'}"/>
		                                       <field name="annual_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
		                                       <field name="annual_amount_received" readonly="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
	                                            <field name="bank_id" />
	                                            <field name="bank_account_id"/>
	                                            <field name="observations"/>
	                                            <field name="calendar_assigned_amount_id" invisible="1"/>
	                                        </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- tree view for calendar assigned amounts model -->
        <record id="calendar_assigned_amounts_tree_view" model="ir.ui.view">
            <field name="name">calendar.assigned.amounts.tree.view</field>
            <field name="model">calendar.assigned.amounts</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="date"/>
                    <field name="month_int" invisible="1"/>
                    <field name="obs_calender_amount"/>
                    <field name="amount_to_receive"/>
                    <field name="amount_received"/>
                    <field name="amount_pending"/>

                    <!-- Fields for Control of Assigned Amount -->
                    <field name="folio" invisible="1"/>
                    <field name="budget_id" invisible="1"/>
                    <field name="import_date" invisible="1"/>
                    <field name="user_id" invisible="1"/>
                    <field name="obs_cont_amount" invisible="1"/>
                    <field name="file" invisible="1"/>
                    <field name="filename" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- action for calendar assigned amounts views -->
        <record id="action_calendar_assigned_amounts" model="ir.actions.act_window">
            <field name="name">Calendar of assigned amounts</field>
            <field name="res_model">calendar.assigned.amounts</field>
            <field name="view_mode">tree,form,search</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('calendar_assigned_amounts_tree_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('calendar_assigned_amounts_form_view')})]"/>
            <field name="context">{}</field>
        </record>
    </data>
</odoo>