<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="income_statement_form_view" model="ir.ui.view">
            <field name="name">income.statement.form.view</field>
            <field name="model">income.statement</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="estimated" widget="float"/>
                            <field name="exp_and_red" widget="float"/>
                            <field name="modified" widget="float"/>
                            <field name="accrued" widget="float"/>
                            <field name="raised" widget="float"/>
                            <field name="difference" widget="float"/>
                            <field name="parent_id" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="income_statement_tree_view" model="ir.ui.view">
            <field name="name">income.statement.tree.view</field>
            <field name="model">income.statement</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="estimated"/>
                    <field name="exp_and_red"/>
                    <field name="modified"/>
                    <field name="accrued"/>
                    <field name="raised"/>
                    <field name="difference"/>
                    <field name="parent_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="action_view_income_statement" model="ir.actions.act_window">
            <field name="name">Statement of Income</field>
            <field name="res_model">income.statement</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>