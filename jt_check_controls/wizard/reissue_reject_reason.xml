<?xml version="1.0" encoding="utf-8"?>

<odoo>
	<data>
		<record id="reissue_reject_reason_wizard" model="ir.ui.view">
			<field name="name">reissue.reject.reason.wizard</field>
			<field name="model">reissue.reject.reason.wizard</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<field name="reason_rejection" required="1"/>
							<field name="reissue_checks_id" invisible="1"/>
						</group>
						<footer>
                   			<button string="Apply" class="btn btn-primary" type="object" name="apply"/>
							<button string="Cancel" class="oe_link" special="cancel"/>
                		</footer>
					</sheet>
				</form>
			</field>
		</record>
	</data>
</odoo>