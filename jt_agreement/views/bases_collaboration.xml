                </tree>
            </field>
        </record>

        <record id="view_bases_collabration_form" model="ir.ui.view">
            <field name="name">Bases Collabration Form view</field>
            <field name="model">bases.collaboration</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button name="confirm" type="object" string="Confirm" class="oe_highlight"
                                 attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    </header>
                    <sheet>
                         <div class="oe_button_box" name="button_box">
                            <button name="action_operations" type="object" class="oe_stat_button"
                                    icon="fa-random" attrs="{'invisible': [('state', '=', 'draft')]}">
                                <field name="total_operations" widget="statinfo"/>
                            </button>
                             <button name="action_modifications" type="object" class="oe_stat_button"
                                    icon="fa-random" attrs="{'invisible': [('state', '=', 'draft')]}">
                                <field name="total_modifications" widget="statinfo"/>
                            </button>

                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="convention_no"/>
                                <field name="opening_bal"/>
                                <field name="available_bal" readonly="1"/>
                                <field name="agreement_type_id"/>
                                <field name="fund_type_id" readonly="1" force_save="1"/>
                                <field name="dependency_obs"/>
                            </group>
                            <group>
                                <field name="dependency_id"/>
                                <field name="desc_dependency"/>
                                <field name="subdependency_id" domain="[('dependency_id', '=', dependency_id)]"/>
                                <field name="desc_subdependency"/>
                                <field name="origin_resource_id" domain="[('is_it_enabled_for_agreement', '=',  True)]"/>
                                <field name="goals"/>
                                <field name="registration_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Accounts" name="accounts">
                                <group>
                                    <group>
                                        <field name="liability_account_id"/>
                                        <field name="investment_account_id"/>
                                    </group>
                                    <group>
                                        <field name="interest_account_id"/>
                                        <field name="availability_account_id"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Collaboration Base Contacts" name="collaboration_base_contacts">
                                <group>
                                    <group string="Owner of Dependency">
                                        <field name="employee_id"/>
                                        <field name="job_id"/>
                                        <field name="phone"/>
                                    </group>
                                    <group string="Administrative Secretary">
                                        <field name="administrative_secretary_id"/>
                                        <field name="administrative_secretary_phone"/>
                                    </group>
                                    <group string="Responsible Directer of CBC">
                                        <field name="direct_manager_cbc_id"/>
                                        <field name="cbc_responsible_phone"/>
                                        <field name="email"/>
                                    </group>
                                    <group string="Address of Dependency">
                                        <field name="unit_address"/>
                                        <field name="additional_observation"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Registration Documentation" name="registration_documentation">
                                <group>
                                    <group>
                                        <field name="cbc_format" required="1"/>
                                    </group>
                                    <group>
                                        <field name="cbc_shipping_office" required="1"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Committee" name="committee">
                                <group string="Committe">
                                    <field name="committe_ids">
                                        <tree editable="top">
                                            <field name="column_id"/>
                                            <field name="column_position_id"/>
                                        </tree>
                                        <form>
                                            <group>
                                                <field name="column_id"/>
                                                <field name="column_position_id"/>
                                            </group>
                                        </form>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

