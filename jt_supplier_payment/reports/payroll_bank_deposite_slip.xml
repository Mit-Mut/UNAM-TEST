<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="payroll_bank_deposite_slip_template">
            <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="o">
                <t>
                    <div class="page" style="text-size:12px;margin-bottom:50px;">
                        <div class="oe_structure"/>
                        <div class="row" name="payment_place_name">
                            <div class="col-8 text-left">
                                  <span>TELEFONO ________________________</span>
                            </div>
                            <div class="col-4 text-left">
                                  <span>
                                      CLAVE <u><span t-field="o.payment_place_id.name"/></u>
                                  </span>
                            </div>
                        </div>
                        <br/>
                        <div class="row" name="dependancy_name">
                             <div class="col-12 text-left">
                                  <span>
                                      DEPENDENCIA <u><span t-field="o.dependancy_id.description"/></u>
                                  </span>
                                  <br/>
                                  <br/>
                                  RECIBÍ DEL DEPARTAMENTO DE PAGO DE NÓMINA Y PRESTACIONES DE LA DIRECCIÓN GENERAL DE FINANZAS LOS SIGUIENTES DOCUMENTOS PARA EL PAGO DE NÓMINA
                            </div>
                        </div>
                        <br/>
                       <!--  <div class="row" name="details_name">
                             <div class="col-12 text-left">
                                  <span>
                                      RECIBÍ DEL DEPARTAMENTO DE PAGO DE NÓMINA Y PRESTACIONES DE LA DIRECCIÓN GENERAL DE FINANZAS LOS SIGUIENTES DOCUMENTOS PARA EL PAGO DE NÓMINA
                                  </span>
                            </div>
                        </div> -->
                        <div class="row" name="bank_name">
                             <div class="col-12 text-left">
                                  <span>
                                      BANCO:<span t-field="o.payment_issuing_bank_id.name"/>
                                  </span>
                            </div>
                        </div>
                        
                        <br/>
                        <div class="row" name="folio_name">
                        	<t t-foreach="o.get_counter_council_folio(docs)" t-as="data">
                              <div class="col-8 text-left">
                                    <span>
                                        FOLIOS DE DEPOSITOS DEL <u><t t-esc="data['smallest_folio']"/> </u>
                                    </span>
                              </div>
                               <div class="col-4 text-left">
                                    <span>
                                        AL <u><t t-esc="data['biggest_folio']"/>  </u>
                                    </span>
                              </div>
                          </t>
						            </div>
						            <div class="row" name="folio_vales_name">
                               <div class="col-8 text-left">
                                    <span>
                                        VALES DE DESPENSA DEL FOLIO _____________________________
                                    </span>
                              </div>
                               <div class="col-4 text-left">
                                    <span>
                                        AL ___________________
                                    </span>
                              </div>  
                        </div>
                        <div class="row" name="folio_hojas_name">
                             <div class="col-8 text-left">
                                  <span>
                                      HOJAS NOMINA FOLIO _____________________________
                                  </span>
                            </div>
                             <div class="col-4 text-left">
                                  <span>
                                      AL ___________________
                                  </span>
                            </div>                            
                        </div>
                        <br/>
						<div class="row" name="document_name">
                             <div class="col-12 text-left">
                                  <span>
                                      CORRESPONDIENTES A LA QUINCENA <t t-if="o.fornight"><span t-field="o.fornight"/></t> <span t-field="o.invoice_date" t-options='{"format": "yyyy"}'/>
                                  </span>
                            </div>
						</div>
						<br/>
						<div class="row" name="date_name">
                             <div class="col-7 text-left">
                                  <span>
                                      REVISO  ________________________<br/>
                                      PAGADOR HABILITADO
                                  </span>
                            </div>
                             <div class="col-5 text-left">
                                  <span style="margin-left:2px;">
                                      FECHA ___________________
                                  </span>
                            </div>
						</div>
						<br/>
						<div class="row" name="sing_line">
                             <div class="col-8 text-left">
                                  <span>
                                      _________________________
                                  </span>
                            </div>
                             <div class="col-4 text-left">
                                  <span>
                                      _________________________
                                  </span>
                            </div>
						</div>
						
						<div class="row" name="sing_data">
                             <div class="col-8 text-left">
                                  <span>
                                      NOMBRE COMPLETO
                                  </span>
                            </div>
                             <div class="col-4 text-center">
                                  <span>
                                      FIRMA
                                  </span>
                            </div>
						</div>
						
						
                    </div>
                </t>
            </t>
            </t>
        </template>

        <report
            id="report_payroll_bank_deposite_slip"
            model="account.move"
            string="Bank deposit Slip"
            report_type="qweb-pdf"
            name="jt_supplier_payment.payroll_bank_deposite_slip_template"
            file="jt_supplier_payment.payroll_bank_deposite_slip_template"
        />

      
    </data>
</odoo>