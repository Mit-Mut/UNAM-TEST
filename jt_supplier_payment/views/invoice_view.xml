		<record id="action_move_journal_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="account.view_move_tree"/>
            <field name="act_window_id" ref="account.action_move_journal_line"/>
        </record>

        <menuitem id="payment_menu" name="Payment of UPA Rectory and Sciences"
                  parent="account_accountant.menu_accounting" sequence="10"/>

        <menuitem id="payment_request_menu" name="Request for payment" parent="payment_menu"
                  action="payment_action" sequence="1"/>
    </data>
</odoo>