        <template id="external_layout_check_req_1">
            <t t-if="not o" t-set="o" t-value="doc"/>

            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>
            <t t-call="jt_check_controls.external_layout_header_check_request_1">
                <t t-raw="0"/>
            </t>
        </template>

        <template id="check_request_1">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-if="o.state == 'approved'">
                        <t t-call="jt_check_controls.external_layout_check_req_1">
                            <div class="page">
                                <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
                                Through this channel, we would greatly appreciate turning your kind instruction to whom
                                it may concern, in order to carry out the development of
                            </div>
                        </t>
                    </t>
                </t>
            </t>
        </template>

        <report
                id="check_request_1"
