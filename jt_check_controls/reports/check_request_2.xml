<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="external_layout_header_check_request_2">
            <div t-attf-class="header o_company_#{company.id}_layout">
                <div class="row">
                    <div class="col-2" align="left">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)"
                             style="max-height: 150px;" alt="Logo"/>
                    </div>
                    <div class="col-4" style="padding-left:15px;padding-top:7px;padding-right:0px;">
                        <p style="margin-top:0;margin-bottom:0;font-size:15px;">UNIVERSITY BOARD OF TRUSTEES</p>
                        <p style="margin-top:0;margin-bottom:0;font-size:15px;">
                            TREASURY
                        </p>
                    </div>
                    <div class="col-6" align="right" style="padding-right:0;padding-left:0px;">
                        <img src="/jt_check_controls/static/src/img/dgf.png"
                             style="max-height:100px;width:54%"/>
                        <p style="margin-top:0;margin-bottom:0;font-size:15px;">
                            GENERAL DIRECTORATE OF FINANCE
                        </p>
                        <p style="margin-top:0;margin-bottom:0;font-size:15px;">
                            DIRECTORATE OF INCOME AND FINANCIAL OPERATIONS
                        </p>
                        <p style="margin-top:0;margin-bottom:0;font-size:15px;">
                            <t t-esc="o.folio_legal"/>
                        </p>
                        <p style="margin-top:0;margin-bottom:0;font-size:15px;">
                            SUBJECT: REQUEST FOR CHECKS
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 mb4" align="left">
                        <t t-if="o.bank_id">
                            <b>
                                <p style="margin-top:0;margin-bottom:0;font-size:15px;">
                                    <t t-esc="o.bank_id.name"/>
                                </p>
                                <t t-if="o.bank_id.bank_id">
                                    <t t-set="bank" t-value="o.bank_id.bank_id"/>
                                    <p style="margin-top:0;margin-bottom:0;font-size:15px;">
                                        <t t-esc="bank.street"/>
                                        <t t-if="bank.street2">
                                            ,
                                            <t t-esc="bank.street2"/>
                                        </t>
                                        <t t-if="bank.city">
                                            ,
                                            <t t-esc="bank.city"/>
                                        </t><br/>
                                        <t t-if="bank.state">
                                            ,
                                            <t t-esc="bank.state.name"/>
                                        </t>
                                        <t t-if="bank.zip">
                                            ,
                                            <t t-esc="bank.zip"/>
                                        </t>
                                    </p>
                                    <p style="margin-top:0;margin-bottom:0;font-size:15px;">
                                        <t t-if="bank.country">
                                            <t t-esc="bank.country.name"/>
                                        </t>
                                    </p>
                                </t>
                                <p style="margin-top:0;margin-bottom:0;font-size:15px;">
                                    <span>Present:</span>
                                </p>
                            </b>
                        </t>
                    </div>
                </div>
                <div class="row">
                    <t t-if="o.bank_id">
                        <div class="col-12 mb4" align="right">
                            <t t-set="exe_name" t-value=""/>
                            <b>
                                <p style="margin-top:0;margin-bottom:0;font-size:15px;">AT'N:
                                    <t t-foreach="o.bank_id.executive_ids" t-as="exe">
                                        <t t-if="exe.recipient_executive and not exe_name">
                                            <t t-esc="exe.name"/>
                                            <t t-set="exe_name" t-value="exe.name"/>
                                        </t>
                                    </t>
                                </p>
                                <p style="margin-top:0;margin-bottom:0;font-size:15px;">
                                    <span>No. Account</span>
                                    <t t-esc="o.bank_id.bank_acc_number"/>
                                    <span>(CUENTA DE PROVEEDORES)</span>
                                </p>
                            </b>
                        </div>
                    </t>
                </div>
            </div>
            <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"
                 t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
                 t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-raw="0"/>
            </div>
            <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
                <div class="row">
                    <div class="col-8" align="left" style="font-size:15px">
                        <span style="font-size:15px">
                            Sincerely
                            <br/>
                        </span>
                        <span style="font-size:15px">
                            FOR MY RACE THE SPIRIT WILL SPEAK
                        </span><br/>
                        <span style="font-size:15px">
                            Ciudad Universitaria, Cd. Mx., A
                            <br/>
                            <t t-esc="o.get_date()"/>
                        </span>
                    </div>
                    <div class="col-4" align="right">
                        <img src="/jt_check_controls/static/src/img/sign.png"
                             style="max-height:100px;width:50%"/>
                    </div>
                </div>
                <br/>
                <div class="row">
                    <t t-set="trade" t-value="o.get_trade_configuration()"/>
                    <div class="col-6" align="left">
                        <t t-if="trade">
                            <span style="font-size:15px">GENERAL DIRECTOR</span>
                        </t>
                    </div>
                    <div class="col-6" align="right">
                        <t t-if="trade">
                            <span style="font-size:15px">DIRECTOR OF INCOME AND FINANCIAL OPERATION</span>
                        </t>
                    </div>
                </div>
                <br/>
                <br/>
                <br/>
                <div class="row">
                    <div class="col-6" align="left">
                        <t t-if="trade">
                            <t t-if="trade.general_director_title">
                                <span style="font-size:15px;" t-esc="trade.general_director_title"/>
                                <span style="font-size:15px;">.</span>
                            </t>
                            <t t-if="trade.general_director_id">
                                <span style="font-size:15px;" t-esc="trade.general_director_id.name"/>
                            </t>
                        </t>
                    </div>
                    <div class="col-6" align="right">
                        <t t-if="trade">
                            <t t-if="trade.revenue_director_title">
                                <span style="font-size:15px;" t-esc="trade.revenue_director_title"/>
                                <span style="font-size:15px;">.</span>
                            </t>
                            <t t-if="trade.revenue_dirctor_id">
                                <span style="font-size:15px;" t-esc="trade.revenue_dirctor_id.name"/>
                            </t>
                        </t>
                    </div>
                </div><br/>
                <div class="row">
                    <div class="col-1" align="left">
                        <span style="font-size:15px">C.C.P.</span>
                    </div>
                    <div class="col-11" align="left">
                        <t t-if="trade">
                            <t t-foreach="trade.copied_employee_ids" t-as="employee">
                                <t t-if="employee.employee_id">
                                    <t style="font-size:15px" t-esc="employee.title"/>.
                                    <t style="font-size:15px" t-esc="employee.employee_id.name"/>-
                                    <t style="font-size:15px" t-esc="employee.job_title"/>
                                    <br/>
                                </t>
                            </t>
                        </t>
                    </div>
                </div>
            </div>
        </template>

        <template id="external_layout_check_req_2">
            <t t-if="not o" t-set="o" t-value="doc"/>

            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>
            <t t-call="jt_check_controls.external_layout_header_check_request_2">
                <t t-raw="0"/>
            </t>
        </template>

        <template id="check_request_2_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <!--                    <t t-if="o.state == 'approved'">-->
                    <t t-call="jt_check_controls.external_layout_check_req_2">
                        <div class="page">
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <span>Through this channel, we would greatly appreciate turning your kind instruction to
                                whom it may concern, in order to carry out the development of
                            </span>
                            <t t-esc="o.amount_checks"/>
                            <span>Formats to print checks from this account</span>
                            <t t-if="o.bank_account_id">
                                (<t t-esc="o.bank_account_id.acc_number"/>)
                            </t>
                            <span>They must start from the folio</span>
                            <t t-esc="o.intial_folio"/>
                            <span>Annex, it will be useful to find the
                                canceled format containing the folio
                            </span>
                            <span> </span><t t-esc="o.print_sample_folio_number"/>
                            <span>, In order to be considered (s) as a print sample.</span>
                            <br/>
                            <span>This Checks must have the AMB
                                security measures, in addition to the
                                security features of the following technical sheet:
                            </span>
                            <br/>
                            <span>
                                1. The exact size of the format should be
                                    8 1⁄2 ”X 14” refined.
                            </span><br/>
                            <span>
                                2. On security paper, you must comply
                                with what is established in the standards for checks.
                            </span><br/>
                            <span>
                                3. All the tables of the vouchers must keep
                                the measurements according to the check
                                sample.
                            </span><br/>
                            <span>
                                4. All texts must be legible and have good
                                print quality.
                            </span><br/>
                            <span>
                                5. Respect the position and texts that are
                                located in each box or field of the receipts.
                            </span><br/>
                            <span>
                                6. The legend POLICY PAPER printed on
                                    the reverse should be in the lowest tone allowed by the standard.
                            </span><br/>
                            <span>
                                7. Arabic folios must be printed with inkjet (Inkjet).
                            </span><br/>
                            <span>
                                8. The magnetizable strip must be printed
                                    with inkjet (Inkjet).
                            </span><br/>
                            <span>
                                9. The tone of the UNAM logos presented
                                on the check and on the vouchers must be
                                in accordance with those printed on the
                                check delivered.
                            </span><br/>
                            <span>
                                10. The background tone of the vouchers
                                and the check must be the same as those of the folio <span> </span><t t-esc="o.print_sample_folio_number"/> check.
                            </span>
                            <br/>
                            <span>
                                11. The dies (horizontal perforations) should not be so deep, 8 points per inch.
                            </span><br/>
                            <span>
                                12. Die ties should not end in cut and should be 1/32 " apart from each side.
                            </span><br/>
                            <span>
                                13. The inks used in the printing of the
                                checks must not be unpainted and / or
                                must not be repainted when they are
                                passed through the UNAM printing
                                equipment.
                            </span><br/>
                            <span>
                                14. The numbering of the checks must be
                                ordered consecutively from "N" to 1 face
                                up.
                            </span><br/>
                            <span>
                                15. The check count should be from the
                                bottom left of the check.
                            </span><br/>
                            <span>
                                16. Packaging specifications:
                            </span><br/>
                            <span style="margin-left: 30px;">
                                - Checks should be packaged clean, with no paper residue or
                                    cut-outs.
                            </span><br/>
                            <span style="margin-left: 30px;">
                                - Make blocks of 500 checks.
                            </span><br/>
                            <span style="margin-left: 30px;">
                                - Place strips for every 500 checks.
                            </span><br/>
                            <span style="margin-left: 30px;">
                                - A cover and back cover must be
                                placed in 400 gram matt couché
                                cardboard. As protectors above
                                and below each block of 500
                                checks and then place the
                                binding.    
                            </span><br/>
                            <span style="margin-left: 30px;">
                                - Once wrapped and with the
                                coated paper protectors, wrap the
                                blocks of the 500 checks in 130-
                                gram brown kraft paper.
                            </span><br/>
                            <span style="margin-left: 30px;">
                                - Each package of 500 checks
                                must be labeled with its folio rank.
                            </span><br/>
                            <span style="margin-left: 30px;">
                               - Place check packages in boxes
                                with a capacity of 200 checks.
                            </span><br/>
                            <span style="margin-left: 30px;">
                                - Place one carton above and one
                                below the 4 packages of 500.
                            </span><br/>
                            <span style="margin-left: 30px;">
                                - The carton must be the same as
                                the box.
                            </span><br/>
                            <span style="margin-left: 30px;">
                               - The box must be the exact size of
                                the checks.
                            </span><br/>
                            <span style="margin-left: 30px;">
                                - The box must be single
                                corrugated telescopic and
                                measures 14 1⁄4 ”long by 8 3⁄4”
                                wide by 8 1⁄4 ”high.
                            </span><br/>
                            <span style="margin-left: 30px;">
                                - The box must be labeled with the
                                range of folios it contains.
                            </span><br/>
                            <span style="margin-left: 30px;">
                                - The box without strap because
                                when they are transported, the
                                boxes are taken by the straps and
                                they cause cracks in the boxes so
                                that the inner packages are
                                mistreated.
                            </span><br/>
                            <span>
                                Please strictly adhere to the technical
                                characteristics of substance and form, as
                                well as security measures of the approved
                                check, also contain the legend" THE
                                VALIDITY OF THIS CHECK IS FOR
                                 DAYS "ON THE FRONT AND BACK OF THE DOCUMENT .."
                            </span><br/>
                            <span>
                                Without any other particular and hoping to
                                be favored with your attention to the
                                present, we say goodbye to you with a
                                cordial greeting.
                            </span><br/>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <record id="paperformat_check_request_2" model="report.paperformat">
            <field name="name">Check Request 2</field>
            <field name="default" eval="True"/>
            <field name="orientation">Portrait</field>
            <field name="format">A4</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">80</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <report
                id="check_request_2"
                model="checkbook.request"
                string="Check Request 2"
                report_type="qweb-pdf"
                name="jt_check_controls.check_request_2_template"
                file="jt_check_controls.check_request_2_template"
                paperformat="jt_check_controls.paperformat_check_request_2"
        />

    </data>
</odoo>